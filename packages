# Command Line Utilities
sudo apt install vim ranger

# launcher

sudo sh -c "echo 'deb http://download.opensuse.org/repositories/home:/manuelschneid3r/xUbuntu_20.04/ /' > /etc/apt/sources.list.d/home:manuelschneid3r.list"
wget -nv https://download.opensuse.org/repositories/home:manuelschneid3r/xUbuntu_20.04/Release.key -O Release.key
sudo apt-key add - < Release.key
sudo apt-get update
sudo apt-get install albert

# package manager
sudo apt install aptitude 
# Logtech MX Master
sudo apt install solaar

# deep learning libraries
# http://support.system76.com/articles/cuda/
sudo apt install system76-cuda-latest
#system76-cudnn-10.1

# graphics
sudo apt install blender inkscape krita darktable

# comms
sudo apt install slack

# gnome customization
sudo apt install chrome-gnome-shell
sudo apt install python3-pip
sudo apt install copyq

# VS Code OSS - https://vscodium.com/
wget -qO - https://gitlab.com/paulcarroty/vscodium-deb-rpm-repo/raw/master/pub.gpg | sudo apt-key add - 
echo 'deb https://gitlab.com/paulcarroty/vscodium-deb-rpm-repo/raw/repos/debs/ vscodium main' | sudo tee --append /etc/apt/sources.list.d/vscodium.list 
sudo apt update && sudo apt install codium 
